    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.13.0",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.33.0",
    "ethereum-waffle": "^4.0.9",
